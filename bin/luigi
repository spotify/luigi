#!/usr/bin/env python

import os
import sys
sys.path.insert(0, os.getcwd())  # needed for unit test + good for convenience
import warnings
import luigi.cmdline


def main(argv):
    warnings.warn("'bin/luigi' has moved to console script 'luigi'", DeprecationWarning)
    luigi.cmdline.luigi_run(argv)


if __name__ == '__main__':
    main(sys.argv[1:])
